using System;
class MidArifCalcProg
{
    public static void Main(string[] args)
    {
        int a, b, c, d, e;
        Console.WriteLine("Поиск среднего ариметического у двух, трёх, четырёх и пяти чисел !");
        int arf;
        Console.WriteLine("Введите ниже количество чисел для поиска среднего арифметического !\n");
        arf = Convert.ToInt32(Console.ReadLine());
        if (arf == 2)
        {
            Console.WriteLine("Введите числа :");
            Console.WriteLine("Пример: 2 \n3");
            int res;
            a = Convert.ToInt32(Console.ReadLine());
            b = Convert.ToInt32(Console.ReadLine());
            res = (a + b) / 2;
            Console.WriteLine("Ответ " + res);
        }
        else if (arf == 3)
        {
            Console.WriteLine("Введите числа :");
            Console.WriteLine("Пример: 2 \n3\n4");
            int res;
            a = Convert.ToInt32(Console.ReadLine());
            b = Convert.ToInt32(Console.ReadLine());
            c = Convert.ToInt32(Console.ReadLine());
            res = (a + b + c) / 3;
            Console.WriteLine("Ответ " + res);
        }
        else if (arf == 4)
        {
            Console.WriteLine("Введите числа :");
            Console.WriteLine("Пример: 2 \n3\n4");
            int res;
            a = Convert.ToInt32(Console.ReadLine());
            b = Convert.ToInt32(Console.ReadLine());
            c = Convert.ToInt32(Console.ReadLine());
            d = Convert.ToInt32(Console.ReadLine());
            res = (a + b + c + d) / 4;
            Console.WriteLine("Ответ " + res);
        }
        else if (arf == 5)
        {
            Console.WriteLine("Введите числа :");
            Console.WriteLine("Пример: 2 \n3\n4");
            int res;
            a = Convert.ToInt32(Console.ReadLine());
            b = Convert.ToInt32(Console.ReadLine());
            c = Convert.ToInt32(Console.ReadLine());
            d = Convert.ToInt32(Console.ReadLine());
            e = Convert.ToInt32(Console.ReadLine());
            res = (a + b + c + d + e) / 5;
            Console.WriteLine("Ответ " + res);
        }
        else
        {
            Console.WriteLine("Пожалуйста , проверьте , что вы ввели число от 1 до 5 , в строчке , где вас просили ввести количество чисел для поиска среднего арифметического .");
        }
    }
}
